<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:munit="http://www.mulesoft.org/schema/mule/munit" xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
		http://www.mulesoft.org/schema/mule/munit-tools  http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">
	<munit:config name="exp-user-api-get-user-test-suite.xml" />
	<munit:test name="exp-user-api-get-user-test-suite:test-success" doc:id="3ac742c5-6bea-499e-a2a2-e8a165ca71f5" description="Test">
		<munit:behavior>
			<munit-tools:mock-when doc:name="Mock Get User" doc:id="dc398b69-a07d-4b78-9a29-d05f42df7430" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Get User" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value='#[readUrl("classpath://users/get-user.json")]' mediaType="application/java" encoding="UTF-8" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<munit:set-event doc:name="Set Event" doc:id="6b1caf7e-0771-498c-afca-75fa0fd6e7e1">
				<munit:attributes value='{&#10;	"uriParams":{&#10;		"username": "test"&#10;	}&#10;}' encoding="UTF-8" mediaType="application/json" />
			</munit:set-event>
			<flow-ref doc:name="get:\getUser\(username):exp-user-api-config" doc:id="176351ce-74a4-4d0e-a3bf-eaa36b7158ee" name="get:\getUser\(username):exp-user-api-config"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-equals doc:name="Assert Response" doc:id="085033ea-ca8f-432f-a74f-5435303b61b1" actual="#[payload]" expected='#[readUrl("classpath://users/get-user.json")]' />
		</munit:validation>
	</munit:test>
	<munit:test name="exp-user-api-get-user-test-suite:test-user-not-found" doc:id="d9971a1d-e117-4b3e-9f26-7455cbed371a" >
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock Get User" doc:id="0bc9939b-1816-4656-a699-7b519b7f4c47" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Get User" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:error typeId="#['HTTP:NOT_FOUND']" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<munit:set-event doc:name="Set Event" doc:id="2eed0786-f386-4dd2-8fff-d7f7590f84f9" >
				<munit:attributes value='{&#10;	"uriParams":{&#10;		"username": "test"&#10;	}&#10;}' encoding="UTF-8" mediaType="application/json" />
			</munit:set-event>
			<flow-ref doc:name="get:\getUser\(username):exp-user-api-config" doc:id="ede0d818-6419-448c-9578-b16ce95d3f5e" name="get:\getUser\(username):exp-user-api-config" />
		</munit:execution>
		<munit:validation >
			<munit-tools:verify-call doc:name="Verify call User Not Found" doc:id="cc8630ac-a3bf-48b6-bb01-15c97d9b5af3" processor="logger">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="User Not Found" attributeName="doc:name" />
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
		</munit:validation>
	</munit:test>
	<munit:test name="exp-user-api-get-user-test-suite:test-error" doc:id="c1160240-52f2-4afd-8702-bc7b3d7a7903" expectedErrorType="HTTP:CONNECTIVITY">
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock Get User" doc:id="196d448e-dd2c-43db-bd43-803533d4dc58" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Get User" attributeName="doc:name" />
					<munit-tools:with-attribute whereValue="Get User" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:error typeId="#['HTTP:CONNECTIVITY']" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<munit:set-event doc:name="Set Event" doc:id="cbe6827f-cb9e-4277-b9cb-f0d6be76a0c6" >
				<munit:attributes value='{&#10;	"uriParams":{&#10;		"username": "test"&#10;	}&#10;}' encoding="UTF-8" mediaType="application/json" />
			</munit:set-event>
			<flow-ref doc:name="get:\getUser\(username):exp-user-api-config" doc:id="5f007343-b704-4b99-bd7a-ed25ccedca4b" name="get:\getUser\(username):exp-user-api-config" />
		</munit:execution>
		<munit:validation >
			<munit-tools:verify-call doc:name="Verify call General Error Response" doc:id="d8d03368-307d-4330-8b8a-1608d4327382" processor="set-payload">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="General Error Response" attributeName="doc:name" />
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
		</munit:validation>
	</munit:test>

</mule>

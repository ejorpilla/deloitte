<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:munit="http://www.mulesoft.org/schema/mule/munit" xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
		http://www.mulesoft.org/schema/mule/munit-tools  http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">
	<munit:config name="exp-user-api-get-users-test-suite.xml" />
	<munit:test name="exp-user-api-get-users-test-suite:test-success" doc:id="3ac742c5-6bea-499e-a2a2-e8a165ca71f5" description="Test">
		<munit:behavior>
			<munit-tools:mock-when doc:name="Mock Get User" doc:id="dc398b69-a07d-4b78-9a29-d05f42df7430" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Get User" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value='#[readUrl("classpath://users/get-users.json")]' mediaType="application/java" encoding="UTF-8" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="get:\getUsers:exp-user-api-config" doc:id="176351ce-74a4-4d0e-a3bf-eaa36b7158ee" name="get:\getUsers:exp-user-api-config"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-equals doc:name="Assert Response" doc:id="085033ea-ca8f-432f-a74f-5435303b61b1" actual="#[payload.users]" expected='#[readUrl("classpath://users/get-users.json")]' />
		</munit:validation>
	</munit:test>
	<munit:test name="exp-user-api-get-users-test-suite:test-error" doc:id="c1160240-52f2-4afd-8702-bc7b3d7a7903" expectedErrorType="HTTP:CONNECTIVITY">
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock Get User" doc:id="196d448e-dd2c-43db-bd43-803533d4dc58" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Get User" attributeName="doc:name" />
					<munit-tools:with-attribute whereValue="Get User" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:error typeId="#['HTTP:CONNECTIVITY']" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="get:\getUsers:exp-user-api-config" doc:id="5f007343-b704-4b99-bd7a-ed25ccedca4b" name="get:\getUsers:exp-user-api-config" />
		</munit:execution>
		<munit:validation >
			<munit-tools:verify-call doc:name="Verify call General Error Response" doc:id="d8d03368-307d-4330-8b8a-1608d4327382" processor="set-payload">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="General Error Response" attributeName="doc:name" />
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
		</munit:validation>
	</munit:test>

</mule>

<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:munit="http://www.mulesoft.org/schema/mule/munit" xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
		http://www.mulesoft.org/schema/mule/munit-tools  http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">
	<munit:config name="exp-user-api-post-create-user-test-suite.xml" />
	<munit:test name="exp-user-api-test-suite-post-create-user:test-success" doc:id="81c577c0-c16b-4b67-88bf-61150111a989" description="Test">
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock Create User" doc:id="367da82e-6eab-44f1-8e37-0718acaeb678" processor="http:request">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Create User" attributeName="doc:name" />
				</munit-tools:with-attributes>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<munit:set-event doc:name="Set Event" doc:id="f85152e2-c5ff-4d6d-9170-c5a5f58fd0db" >
				<munit:payload value='#[readUrl("classpath://users/get-user.json")]' encoding="UTF-8" mediaType="application/java" />
			</munit:set-event>
			<flow-ref doc:name="post:\createUser:application\json:exp-user-api-config" doc:id="cb50c7db-b138-4470-9095-7173275d23a6" name="post:\createUser:application\json:exp-user-api-config"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:verify-call doc:name="Verify call Logger End" doc:id="475883c0-ee34-46f2-a98d-371dc679c8f3" processor="logger" atLeast="#[2]">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="End" attributeName="doc:name" />
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
		</munit:validation>
	</munit:test>
	<munit:test name="exp-user-api-post-create-user-test-suite:test-error" doc:id="e6b25a9c-842b-4b23-a4a3-b9b481d7a9dc" expectedErrorType="HTTP:CONNECTIVITY">
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock Create User" doc:id="0679efe9-e014-4cad-88ec-e62deda45266" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Create User" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:error typeId="#['HTTP:CONNECTIVITY']" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<munit:set-event doc:name="Set Event" doc:id="efba2d3d-e508-4645-9cdc-e129efedb10b" >
				<munit:payload value='#[readUrl("classpath://users/get-user.json")]' encoding="UTF-8" mediaType="application/java" />
			</munit:set-event>
			<flow-ref doc:name="post:\createUser:application\json:exp-user-api-config" doc:id="e113091c-279a-443f-b8a9-a85673c17ef4" name="post:\createUser:application\json:exp-user-api-config" />
		</munit:execution>
		<munit:validation >
			<munit-tools:verify-call doc:name="Verify call General Error Response" doc:id="2724ecc6-fda1-4adb-80d1-bed70ab92b20" processor="set-payload" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="General Error Response" attributeName="doc:name" />
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
		</munit:validation>
	</munit:test>

</mule>

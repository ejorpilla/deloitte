<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:munit="http://www.mulesoft.org/schema/mule/munit" xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
		http://www.mulesoft.org/schema/mule/munit-tools  http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">
	<munit:config name="sys-user-api-get-users-test-suite.xml" />
	<munit:test name="sys-user-api-get-users-test-suite:test-success" doc:id="f575e6fc-3885-4a39-b254-0f4ed0b920e9" description="Test">
		<munit:behavior>
			<munit-tools:mock-when doc:name="Mock Users" doc:id="8b369fd4-2026-42e2-9d08-d4194af9fb65" processor="db:select">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="Users" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value='#[readUrl("classpath://users/get-users.json")]' mediaType="application/java" encoding="UTF-8" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="get:\users:sys-user-api-config" doc:id="e6ecdc63-9f15-4449-8106-e90cb183afc3" name="get:\users:sys-user-api-config"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-equals doc:name="Assert Response" doc:id="254f9489-c4f1-4798-b998-3b3219af3d5a" actual="#[payload]" expected='#[readUrl("classpath://users/get-users.json")]' />
		</munit:validation>
	</munit:test>
	<munit:test name="sys-user-api-get-users-test-suite:test-empty" doc:id="02455b85-b345-4d49-b6a1-a66c31fac7c8" >
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock Users" doc:id="f38ab584-c389-46a1-8a0d-a49be7bebb94" processor="db:select" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Users" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[[]]" mediaType="application/java" encoding="UTF-8" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="get:\users:sys-user-api-config" doc:id="e3134b77-28a8-49c4-a4e4-7a5898508664" name="get:\users:sys-user-api-config" />
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-equals doc:name="Assert Response" doc:id="b4a024ea-7fbb-4d2c-bf1b-e7f0e32cb4ff" actual="#[payload]" expected='#[[]]' />
		</munit:validation>
	</munit:test>
	<munit:test name="sys-user-api-get-users-test-suite:test-error" doc:id="8c7f8aae-1bb1-4de6-af8e-f01a068c0138" expectedErrorType="DB:CONNECTIVITY">
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock Users" doc:id="d2e6c20c-cbff-4036-84bc-ebe2450d56f9" processor="db:select" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Users" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:error typeId="#['DB:CONNECTIVITY']" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="get:\users:sys-user-api-config" doc:id="c9777a93-e4f2-4d3a-b746-6e7fc7a7862c" name="get:\users:sys-user-api-config" />
		</munit:execution>
		<munit:validation>
			<munit-tools:verify-call doc:name="Verify call - General Error Response" doc:id="21f0328d-8582-4c85-bfb3-01da3e15e63e" processor="set-payload">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="General Error Response" attributeName="doc:name" />
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
		</munit:validation>
	</munit:test>

</mule>

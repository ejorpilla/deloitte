http://www.mulesoft.org/schema/mule/os http://www.mulesoft.org/schema/mule/os/current/mule-os.xsd
http://www.mulesoft.org/schema/mule/ee/bti http://www.mulesoft.org/schema/mule/ee/bti/current/mule-bti-ee.xsd">
	<http:listener-config name="sys-user-api-httpListenerConfig">
        <http:listener-connection host="${connections.listener.host}" port="${connections.listener.port}" />
    </http:listener-config>
    <apikit:config name="sys-user-api-config" api="sys-user-api.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
	<db:config name="Database_Config_MySQL" doc:name="Database Config" doc:id="24ef33d4-edfd-4726-b9b5-9daef683578e" >
		<db:my-sql-connection host="${connections.mysql.host}" port="${connections.mysql.port}" database="${connections.mysql.db}" user="${secure::connections.mysql.user}" useXaTransactions="true" transactionIsolation="READ_COMMITTED"/>
	</db:config>
	<global-property doc:name="Global Property" doc:id="862c2503-f7ef-4b7b-a95c-9b2e646b24b8" name="api.env" value="local" />
	<configuration-properties doc:name="Configuration properties" doc:id="9dcfb313-3eac-4946-8eec-1bd31feea52c" file="config/global.yaml" />
	<configuration-properties doc:name="Configuration properties" doc:id="ba0a3d76-309e-4939-83a3-0eac0b5295df" file="config/${api.env}.yaml" />
	<secure-properties:config name="Secure_Properties_Config" doc:name="Secure Properties Config" doc:id="08efe068-559a-4526-b8ff-b2b2bfc01c11" file="config/${api.env}.properties" key="${api.secure.key}" />
	<global-property doc:name="Global Property" doc:id="083b5724-325b-40a9-bfad-2fec428a8f83" name="api.secure.key" value="1111111111111111" />
	<bti:transaction-manager doc:name="Bitronix Transaction Manager" doc:id="94b7f91d-cf08-495a-a5e1-f15c0d102902" />
	<configuration doc:name="Configuration" doc:id="08216bff-41e7-48ea-925b-7e73fa969022" defaultErrorHandler-ref="error-handler-default" />
</mule>
